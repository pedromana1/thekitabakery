{{ 'components-multicolumns.css' | asset_url | stylesheet_tag }}
{{ 'zmz-multicolumn.css' | asset_url | stylesheet_tag }}

{%- liquid
 assign isHeading = false
 if section.settings.title != blank or section.settings.subtitle != blank or section.settings.description != blank 
   assign isHeading = true
 endif 
-%}

{% render 'section-style', section: section, isHeading: isHeading %}

<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{% assign paddingContainerArray = section.settings.desktopContainerPadding | split: ' ' %}
{% assign paddingContainer = paddingContainerArray[3] | abs | times: 1 %}

{%- style -%}
    {% unless section.settings.caption_full_width %}
        #shopify-section-{{ section.id }} .multicolumn-card__info {
            max-width: 54rem;
            margin: 0 auto;
        }
    {% endunless %}
   
    @media screen and (max-width: 749px){
        #shopify-section-{{ section.id }} .sliderMobileHide .slider-buttons{
            display: none;
        }
    }
    @media screen and (min-width: 750px) {
    {% if paddingContainer >= 80 %}
        #shopify-section-{{ section.id }} button.slider-button.slider-button--prev,
        #shopify-section-{{ section.id }} button.slider-button.slider-button--prev{
        left: calc(-{{ paddingContainerArray[3] }}/2);
        }
        #shopify-section-{{ section.id }} button.slider-button.slider-button--next,
        #shopify-section-{{ section.id }} button.slider-button.slider-button--next{
        right:calc(-{{ paddingContainerArray[3] }}/2);
        }
    {% elsif paddingContainer < 80 and paddingContainer > 20 %}
        #shopify-section-{{ section.id }} button.slider-button.slider-button--prev,
        #shopify-section-{{ section.id }} button.slider-button.slider-button--prev{
        left: -{{ paddingContainerArray[3] }};
        }
        #shopify-section-{{ section.id }} button.slider-button.slider-button--next,
        #shopify-section-{{ section.id }} button.slider-button.slider-button--next {
        right:-{{ paddingContainerArray[3] }};
        }

    {% endif %}
   
    }

{%- endstyle -%}

{%- liquid
    assign columns_mobile_int = section.settings.columns_mobile | plus: 0
    assign show_mobile_slider = false
    if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
        assign show_mobile_slider = true
    endif
    assign columns_desktop_int = section.settings.columns_desktop | plus: 0
    assign show_desktop_slider = false
    if section.settings.enable_desktop_slider and section.blocks.size > columns_desktop_int 
        assign show_desktop_slider = true
    endif
-%}

<div class="multicolumn color-{% if section.settings.customColor %}custom_color{% else %}{{ section.settings.color_scheme }}{% endif %} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %} section-style-{{ section.id }} section--wrapper">
    <div class="page-width isolate color-{% if section.settings.section_custom_color %}section_custom_color{% else %}{{ section.settings.container_color_scheme }}{% endif %} gradient container--wrapper {% if section.settings.inverted %}inverted{% endif %}">
        {%- unless section.settings.title == blank -%}
            <div class="title-wrapper-with-link heading--container title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
                {% assign subtitle = section.settings.subtitle | escape %}
                {% assign title = section.settings.title | escape %}
                {%- if section.settings.description != blank and section.settings.collection.description != empty -%}
                    {% assign descriptionStyle = section.settings.description_style %}
                    {% assign description = section.settings.description %}
                {%- endif -%}

                {% render 'section-zmz-heading', subtitle:subtitle, title: title, description: description, descriptionStyle: descriptionStyle %}

                {%- if section.settings.button_label != blank and show_mobile_slider -%}
                    <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">{{ section.settings.button_label | escape }}</a>
                {%- endif -%}
            </div>
        {%- endunless -%}
        <slider-component class="slider-mobile-gutter slider-component-full-width {% if show_desktop_slider %} slider-component-desktop{% endif %}">
            <ul class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--tablet grid--peek{% endif %} {% if show_desktop_slider %} slider--desktop{% endif %}"
                data-zmz-type="slider"
                data-slider-per-mobile="{{ section.settings.columns_mobile }}"
                data-slider-per-desktop="{{ section.settings.columns_desktop }}" 
                id="Slider-{{ section.id }}" 
                role="list"
            >
                {%- liquid
                    assign highest_ratio = 0
                    for block in section.blocks
                        if block.settings.image.aspect_ratio > highest_ratio
                            assign highest_ratio = block.settings.image.aspect_ratio
                        endif
                    endfor
                -%}
                {%- for block in section.blocks -%}
                    {% assign sectionDescriptionScale = block.settings.section_description_scale | times: 1.0 | divided_by: 100 %}
                    {% if sectionDescriptionScale < 1.5 %}
                        {% assign sectionDescriptionScaleTimes = 1.4 %}
                    {% else %}
                        {% assign sectionDescriptionScaleTimes = 2.4 %}
                    {% endif %}

                    {%- style -%}

                        .section-style-{{ section.id }} .item-{{ block.id }} .button{
                            background: {{ block.settings.btn_bg_color }};
                            color:{{ block.settings.btn_text_color }};
                            -webkit-transform: scale(1);
                            transform: scale(1);
                            -webkit-transition: .3s;
                            transition: .3s;
                        }
                        .section-style-{{ section.id }} .item-{{ block.id }} .button:before{
                        box-shadow: var(--shadow-horizontal-offset) var(--shadow-vertical-offset) var(--shadow-blur-radius) {{ block.settings.btn_border_color | hex_to_rgba: btnOpasity }};
                        }
                        .section-style-{{ section.id }} .item-{{ block.id }} .button:after{
                        box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) {{ block.settings.btn_border_color }},0 0 0 var(--buttons-border-width) rgba(var(--color-button),var(--alpha-button-background));
                        }

                        .section-style-{{ section.id }} .item-{{ block.id }} .button:hover{
                        background: {{ block.settings.btn_bg_color_hover }};
                        color:{{ block.settings.btn_text_color_hover }};
                        -webkit-transform: scale(1.02);
                        transform: scale(1.02);
                        }
                        .section-style-{{ section.id }} .item-{{ block.id }} .button:hover:before{
                        box-shadow: var(--shadow-horizontal-offset) var(--shadow-vertical-offset) var(--shadow-blur-radius) {{ block.settings.btn_border_color_hover | hex_to_rgba: btnOpasity }};
                        }
                        .section-style-{{ section.id }} .item-{{ block.id }} .button:hover:after{
                        box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) {{ block.settings.btn_border_color_hover }},0 0 0 var(--buttons-border-width) rgba(var(--color-button),var(--alpha-button-background));
                        }

                        .slider--{{ block.id }} .multicolumn-card__info .itemTextInfo{
                        margin-top:{{ block.settings.info_padding_top_mob }}rem;
                        margin-bottom:{{ block.settings.info_padding_bottom_mob }}rem;
                        }

                        @media screen and (min-width:750px){
                            .slider--{{ block.id }} .multicolumn-card__info .itemTextInfo{
                            margin-top:{{ block.settings.info_padding_top }}rem;
                            margin-bottom:{{ block.settings.info_padding_bottom }}rem;
                            }
                            .slider--{{ block.id }} .rte p{
                            font-size: {{ block.settings.section_description_scale | times: 1.0 | divided_by: 100 | times: sectionDescriptionScaleTimes | append: "rem" }};
                            }
                            .slider--{{ block.id }} .multicolumn-card__info{
                            padding:{{  block.settings.image_padding }}rem;
                            }
                        }
                        .slider--{{ block.id }} .multicolumn-card.content-container {
                        border: solid {{ block.settings.bg_border_img_color }};
                        }


                        {% unless section.settings.color_scheme == "inverse" %}
                            .section-style-{{ section.id }} .item-{{ block.id }} .title{
                            color:{{ block.settings.title_color }};
                            }
                            .section-style-{{ section.id }} .item-{{ block.id }} .rte{
                            color:{{ block.settings.text_color }};
                            }
                        {%endunless%}
                    {% endstyle %}


                    {%- assign empty_column = '' -%}
                    {%- if block.settings.image == blank and block.settings.title == blank and block.settings.text == blank and block.settings.link_label == blank -%}
                        {%- assign empty_column = ' multicolumn-list__item--empty' -%}
                    {%- endif -%}

                    <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %} {{ section.settings.column_alignment }} {{ empty_column }} slider--{{ block.id }} item-{{ block.id }}" {{ block.shopify_attributes }}>
                        <div class="multicolumn-card content-container">
                            {%- if block.settings.image != blank -%}
                                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                                    {% assign spaced_image = true %}
                                {% endif %}
                                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                                    <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                                    {% if section.settings.image_ratio == 'adapt' %}
                                        style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                                            {% endif %}>
                                            
                                       {%- liquid
                      if section.settings.box_type == 'box'
                        assign section_width = section.settings.section_width | append: 'px'
                      elsif section.settings.box_type == 'fluid'
                         assign section_width = section.settings.section_fluid_width | append: 'px'
                      else
                         assign section_width = '100vw' 
                      endif
                   
                      assign number_of_columns = section.settings.columns_desktop
                      assign number_of_columns_mobile = section.settings.columns_mobile
                      assign grid_space_desktop = number_of_columns | minus: 1 | times: section.settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                      assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: section.settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                      assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: section.settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                      if section.settings.image_width == 'half'
                        assign image_width = 0.5
                      elsif section.settings.image_width == 'third'
                        assign image_width = 0.33
                      else
                        assign image_width = 1
                      endif
                    -%}
                    {% capture sizes %}
                      (min-width: {{ section_width }}) calc(({{ section_width }} - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                      (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                      (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                      calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                    {% endcapture %} 
                    {{
                      block.settings.image
                      | image_url: width: 3200  
                      | image_tag:
                        loading: 'lazy',
                        widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                        sizes: sizes,
                        class: 'multicolumn-card__image'
                    }}
                                    </div>
                                </div>
                            {%- endif -%}
                            {% if block.settings.link_label != blank or block.settings.customHtml != empty or block.settings.title != blank or block.settings.text != blank %}
                                <div class="multicolumn-card__info"> 
                                  {% if block.settings.customHtml != empty or block.settings.title != blank or block.settings.text != blank %}
                                    <div class="itemTextInfo">
                                        {% if block.settings.customHtml != empty %}
                                            <div class="customHtml">
                                                {{ block.settings.customHtml }}
                                            </div>
                                        {% endif %}
                                        {%- if block.settings.title != blank -%}
                                            <h3 class="title" style="margin-right: 0;font-size: {{ block.settings.section_heading_scale | times: 1.0 | divided_by: 100 | times: 3 | append: "rem" }};line-height: 1.2;">{{ block.settings.title | escape }}</h3>
                                        {%- endif -%}
                                        {%- if block.settings.text != blank -%}
                                            <div class="rte">{{ block.settings.text }}</div>
                                        {%- endif -%}
                                    </div>
                                {% endif %}
                                    {%- if block.settings.link_label != blank -%}
                                            <a class="link{% if block.settings.useButton %} button  {{ block.settings.zmz_btn_size }}{% if block.settings.button_fullwidth != blank %} w-100{% endif %}{% else %} animate-arrow{% endif %}" {% if block.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %}>{{ block.settings.link_label | escape }}{% unless block.settings.useButton %} <span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span> {% endunless %}</a>
                                    {%- endif -%}

                                    {%- if block.settings.show_social -%}
                                    {%- assign social_style = block.settings.social_style -%}
                                       <ul class="list-unstyled list-social">
                                        {%- if block.settings.social_facebook_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_facebook_link }}" class="link list-social__link" >
                                                {%- render 'icon-facebook', social_style: social_style -%}
                                                <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_instagram_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_instagram_link }}" class="link list-social__link" >
                                               
                                                {%- render 'icon-instagram', social_style: social_style -%}
                                               
                                                <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_youtube_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_youtube_link }}" class="link list-social__link" >
                                               
                                                {%- render 'icon-youtube', social_style: social_style -%}
                                                
                                                <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_tiktok_link != blank -%} 
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_tiktok_link }}" class="link list-social__link" >
                                               
                                                {%- render 'icon-tiktok', social_style: social_style -%}
                                               
                                                <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_twitter_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_twitter_link }}" class="link list-social__link" >
                                                
                                                {%- render 'icon-twitter', social_style: social_style -%}

                                                <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_pinterest_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_pinterest_link }}" class="link list-social__link" >
                                               
                                                {%- render 'icon-pinterest', social_style: social_style -%}
                                                    
                                                <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        {%- if block.settings.social_snapchat_link != blank -%}
                                            <li class="list-social__item">
                                            <a href="{{ block.settings.social_snapchat_link }}" class="link list-social__link" >
                                                
                                                {%- render 'icon-snapchat', social_style: social_style -%}
                                                
                                                <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                                            </a>
                                            </li>
                                        {%- endif -%}
                                        </ul>
                                    {%- endif -%}
                                </div>
                            {% endif %}

                        </div>
                    </li>
                {%- endfor -%}
            </ul>

        {% if show_desktop_slider or show_mobile_slider %}
             <div class="slider-buttons{% if show_desktop_slider == 'false' and show_mobile_slider %} large-up-hidden{% endif %} no-js-hidden">
                <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">
                    {% if section.settings.nav_style_type == 'type_1' %}
                        {%- render 'icon-list', icon: "caret-left" -%}
                    {% else %}
                        {%- render 'icon-list', icon: "left-style-2" -%}
                    {% endif %}
                </button>
                {% unless section.settings.off_carousel_counter %}
                    <div class="slider-counter caption">
                        <span class="slider-counter--current">1</span>
                        <span aria-hidden="true"> / </span>
                        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                        <span class="slider-counter--total">{{ section.blocks.size }}</span>
                    </div>
                {% endunless %}
                <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">
                    {% if section.settings.nav_style_type == 'type_1' %}
                        {%- render 'icon-list', icon: "caret-right" -%}
                    {% else %}
                        {%- render 'icon-list', icon: "right-style-2" -%}
                    {% endif %}

                </button>
            </div>
        {% endif %}
        </slider-component>
        <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
            {%- if section.settings.button_label != blank -%}
                <a class="button button--primary"{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %}>
                    {{ section.settings.button_label | escape }}
                </a>
            {%- endif -%}
        </div>
    </div>
</div>

{% schema %}
{ 
"name": "Zmz multicolumn",
"class": "section zmz-multicolumn zmz-slider",
"tag": "section",
"disabled_on": {
"groups": ["header", "footer"]
},
"settings": [
{
"type": "header",
"content": "t:sections.banners.settings.header.header_1"
},
{
"type": "select",
"id": "box_type",
"options": [
{
"value": "box",
"label": "Box"
},
{
"value": "fluid",
"label": "Container fluid"
},
{
"value": "full_width",
"label": "Container full width"
}
],
"default": "box",
"label": "t:sections.banners.settings.box_type.label"
},

{
"type": "range",
"id": "section_width",
"min": 700,
"max": 1600,
"step": 10,
"default": 1200,
"unit": "px",
"label": "t:sections.banners.settings.section_width.label"
},
{
"type": "range",
"id": "section_fluid_width",
"min": 1000,
"max": 1920,
"step": 10,
"default": 1880,
"unit": "px",
"label": "t:sections.banners.settings.section_fluid_width.label"
},
{
"type": "header",
"content": "t:sections.banners.settings.header.header_2"
},
{
"type": "text",
"id": "title",
"default": "Title",
"label": "t:sections.banners.settings.title.label_2"
},
{
"type": "range",
"id": "section_heading_scale",
"min": 100,
"max": 150,
"step": 1,
"unit": "%",
"label": "t:sections.all.section_heading_scale.label",
"default": 100
},
{
"type": "text",
"id": "subtitle",
"default": "Subtitle",
"label": "t:sections.banners.settings.subtitle.label"
},
{
"type": "range",
"id": "section_subtitle_scale",
"min": 100,
"max": 150,
"step": 1,
"unit": "%",
"label": "t:sections.banners.settings.section_subtitle_scale.label",
"default": 100
},
{
"type": "inline_richtext",
"id": "description",
"default": "Description",
"label": "t:sections.banners.settings.description.label"
},
{
"type": "range",
"id": "section_description_scale",
"min": 100,
"max": 150,
"step": 1,
"unit": "%",
"label": "t:sections.banners.settings.section_description_scale.label",
"default": 100
},
{
"type": "select",
"id": "heading_alignment",
"label": "t:sections.banners.settings.heading_alignment.label",
"options": [
{
"value": "flex-start",
"label": "Left"
},
{
"value": "center",
"label": "Center"
},
{
"value": "flex-end",
"label": "Right"
}
],
"default": "center"
},
{
"type": "checkbox",
"id": "inverted",
"default": false,
"label": "t:sections.zmz-featured-collection.settings.inverted.label"
},
{
"type": "header",
"content": "t:sections.zmz-testimonials.content"
},
{
"type": "select",
"id": "image_width",
"options": [
{
"value": "third",
"label": "t:sections.multicolumn.settings.image_width.options__1.label"
},
{
"value": "half",
"label": "t:sections.multicolumn.settings.image_width.options__2.label"
},
{
"value": "full",
"label": "t:sections.multicolumn.settings.image_width.options__3.label"
}
],
"default": "full",
"label": "t:sections.multicolumn.settings.image_width.label"
},
{
"type": "select",
"id": "image_ratio",
"options": [
{
"value": "adapt",
"label": "t:sections.multicolumn.settings.image_ratio.options__1.label"
},
{
"value": "portrait",
"label": "t:sections.multicolumn.settings.image_ratio.options__2.label"
},
{
"value": "square",
"label": "t:sections.multicolumn.settings.image_ratio.options__3.label"
},
{
"value": "circle",
"label": "t:sections.multicolumn.settings.image_ratio.options__4.label"
}
],
"default": "adapt",
"label": "t:sections.multicolumn.settings.image_ratio.label"
},
{
"type": "header",
"content": "t:sections.zmz-testimonials.content_2"
},
{
"type": "range",
"id": "columns_desktop",
"min": 1,
"max": 6,
"step": 1,
"default": 3,
"label": "t:sections.multicolumn.settings.columns_desktop.label"
},
{
"type": "range",
"id": "spacing_grid_horizontal",
"min": 0,
"max": 50,
"step": 1,
"default": 15,
"unit": "px",
"label": "t:sections.banners.settings.spacing_grid_horizontal.label"
},
{
"type": "select",
"id": "column_alignment",
"options": [
{
"value": "left",
"label": "t:sections.multicolumn.settings.column_alignment.options__1.label"
},
{
"value": "center",
"label": "t:sections.multicolumn.settings.column_alignment.options__2.label"
},
{
"value": "right",
"label": "Right"
}
],
"default": "left",
"label": "t:sections.multicolumn.settings.column_alignment.label"
},
{
"type": "checkbox",
"id": "off_carousel_counter",
"label": "t:sections.zmz-testimonials.settings.off_carousel_counter.label",
"default":  false
},
{
"type": "select",
"id": "nav_style_type",
"label": "t:sections.zmz-testimonials.settings.nav_style_type.label",
"default": "type_1",
"options": [
{
"value": "type_1",
"label": "Type #1"
},
{
"value": "type_2",
"label": "Type #2"
}
]
},
{
"type": "checkbox",
"id": "enable_desktop_slider",
"label": "t:sections.featured-collection.settings.enable_desktop_slider.label",
"default": false
},

{
"type": "checkbox",
"id": "caption_full_width",
"label": "Make caption full width",
"default": false
},
